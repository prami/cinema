  <div class="field">
    <%= f.label :Obsada %><br />
    <%= f.text_field :cast %>
  </div>
  <div class="field inline">
    <%= f.label :Gatunek %><br />
    <%= f.text_field :genre %>
  </div>
  <div class="field inline">
    <%= f.label :Czas_Trwania %><br />
    <%= f.text_field :run_time %>
  </div>
  <div class="field">
    <%= f.label :Ograniczenia_Wiekowe%><br />
    <%= f.text_field :limitation %>
  </div>
  <div class="field inline">
    <%= f.label :Premiera %>
    <%= f.date_select :release %>
  </div>
  <div class="field">
    <%= f.label :Wersja_3D %>
    <%= f.select :version3d, [["Tak", 1],["Nie", 0]] %>
  </div>
  <div class="field">
    <%= f.label :Fabuła %><br />
    <%= f.text_area :plot %>
  </div>
